@using CommerceDemo.Models.Classes
@model List<SalesMove>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Sales Move</h2>
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>Number</th>
            <th>Product</th>
            <th>Customer</th>
            <th>Employee</th>
            <th>Amount</th>
            <th>Price</th>
            <th>Total Price</th>
            <th>Date</th>
            <th>Update</th>
            <th>Details</th>
        </tr>
    </thead>
    @{int i = 1;}
    @foreach (var salesMove in Model)
    {
        <tr>
            <td>@i @{i++;}</td>
            <td>@salesMove.Product.ProductName</td>
            <td>@salesMove.Customer.CustomerName</td>
            <td>@salesMove.Employee.EmployeeName</td>
            <td>@salesMove.Amount</td>
            <td>@salesMove.Price</td>
            <td>@salesMove.TotalPrice</td>
            <td>@salesMove.Date</td>
            <td><a href="/SalesMove/Update_SalesMove/@salesMove.Id" class="btn btn-success">Update</a></td>
            <td><a href="/SalesMove/Detail_SalesMove/@salesMove.Id" class="btn btn-warning">Details</a></td>
        </tr>
    }

</table>


<br />

<a href="/SalesMove/Add_SalesMove/" class="btn btn-info">Make New Sale</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

    $('#tbl1').dataTable({});

</script>
