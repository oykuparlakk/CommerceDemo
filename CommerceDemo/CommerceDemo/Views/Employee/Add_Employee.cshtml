@model CommerceDemo.Models.Classes.Employee
@{
    ViewBag.Title = "Add_Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Add New Employee</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.EmployeeName)
    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.EmployeeImage)
    @Html.TextBoxFor(x => x.EmployeeImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Department)
    @* @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })*@
    @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.employees, new { @class = "form-control" })
    <br />


    <button class="btn btn-primary">Save</button>
</form>